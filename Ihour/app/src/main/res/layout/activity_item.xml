<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zl.ihour.ItemActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/car1"
        android:layout_width="match_parent"
        card:cardBackgroundColor="@color/colorPrimaryLight"
        card:cardCornerRadius="10dp"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <TextView
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:layout_centerVertical="true"
                    android:text="项目"
                    android:textSize="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/cong"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="从"/>
                <TextView
                    android:id="@+id/time_from"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_toRightOf="@+id/cong"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="2016-08-08"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/time_total"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="25dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center|bottom"
                        android:textStyle="bold"
                        android:textColor="@color/wish_type_love"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="hours"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/day"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="0"
                            android:gravity="center_horizontal|bottom"
                            android:textStyle="bold"
                            android:textSize="30dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="坚持天数"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/impo"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:gravity="center_horizontal|bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重要程度"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/patt"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:gravity="center_horizontal|bottom"
                            android:text="正常模式"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奋斗模式"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/button1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/login_edittext"
                        android:text="分享"
                      />
                    <Button
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_edittext"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="添加" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        card:cardCornerRadius="10dp"
        card:cardBackgroundColor="@color/gray"
        android:layout_height="200dp"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/curve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:background="@drawable/itemstyle"
        android:layout_alignParentBottom="true"
        android:text="删除项目"/>
</LinearLayout>
